<h1>新規投稿</h1>

<% if @book.errors.any? %>
  <div class="error">
    <% @book.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  </div>
<% end %>

<%= form_with(model: @book, url: books_path, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <%= form.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', books_path %>
